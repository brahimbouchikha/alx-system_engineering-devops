#!/usr/bin/env bash
#Displays Best School 10 times using while
#Displays bad luck for the 4th loop iteration
#Displays good luck for the 8th loop iteration

i=0

while [ $i -lt 10 ]
do
	if [ $i -eq 4 ]
	then
		echo "bad luck"
	elif [ $i -eq 8 ]
	then
		echo "good luck"
	else
		echo "Best School"
	fi
	(( i++ ))
done
